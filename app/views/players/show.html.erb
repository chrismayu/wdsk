<%- model_class = Player -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @player.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @player.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:middle_initial) %>:</strong></dt>
  <dd><%= @player.middle_initial %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @player.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @player.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code) %>:</strong></dt>
  <dd><%= @player.postal_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @player.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email_address) %>:</strong></dt>
  <dd><%= @player.email_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
  <dd><%= @player.date_of_birth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:years_played) %>:</strong></dt>
  <dd><%= @player.years_played %></dd>
  <dt><strong><%= model_class.human_attribute_name(:played_competitively) %>:</strong></dt>
  <dd><%= @player.played_competitively %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @player.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_of_parent_guardian) %>:</strong></dt>
  <dd><%= @player.name_of_parent_guardian %></dd>
  <dt><strong><%= model_class.human_attribute_name(:willing_to_coach) %>:</strong></dt>
  <dd><%= @player.willing_to_coach %></dd>
  <dt><strong><%= model_class.human_attribute_name(:willing_to_assist_coach) %>:</strong></dt>
  <dd><%= @player.willing_to_assist_coach %></dd>
  <dt><strong><%= model_class.human_attribute_name(:child_like_to_play_goalie) %>:</strong></dt>
  <dd><%= @player.child_like_to_play_goalie %></dd>
  <dt><strong><%= model_class.human_attribute_name(:child_has_a_medical_condition) %>:</strong></dt>
  <dd><%= @player.child_has_a_medical_condition %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medical_condition) %>:</strong></dt>
  <dd><%= @player.medical_condition %></dd>
  <dt><strong><%= model_class.human_attribute_name(:appectance_of_terms) %>:</strong></dt>
  <dd><%= @player.appectance_of_terms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:league_id) %>:</strong></dt>
  <dd><%= @player.league_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transaction_id) %>:</strong></dt>
  <dd><%= @player.transaction_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              league_players_path(@player.league_id), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_league.player_path(@player.league_id, @player), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              league_player_path(@player.league_id, @player),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

