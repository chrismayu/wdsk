<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Middle initial</th>
      <th>Address</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Phone number</th>
      <th>Email address</th>
      <th>Date of birth</th>
      <th>Years played</th>
      <th>Played competitively</th>
      <th>Gender</th>
      <th>Name of parent guardian</th>
      <th>Willing to coach</th>
      <th>Willing to assist coach</th>
      <th>Child like to play goalie</th>
      <th>Child has a medical condition</th>
      <th>Medical condition</th>
      <th>Appectance of terms</th>
      <th>League</th>
      <th>Email address</th>
      <th>Transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.last_name %></td>
        <td><%= player.first_name %></td>
        <td><%= player.middle_initial %></td>
        <td><%= player.address %></td>
        <td><%= player.city %></td>
        <td><%= player.postal_code %></td>
        <td><%= player.phone_number %></td>
        <td><%= player.email_address %></td>
        <td><%= player.date_of_birth %></td>
        <td><%= player.years_played %></td>
        <td><%= player.played_competitively %></td>
        <td><%= player.gender %></td>
        <td><%= player.name_of_parent_guardian %></td>
        <td><%= player.willing_to_coach %></td>
        <td><%= player.willing_to_assist_coach %></td>
        <td><%= player.child_like_to_play_goalie %></td>
        <td><%= player.child_has_a_medical_condition %></td>
        <td><%= player.medical_condition %></td>
        <td><%= player.appectance_of_terms %></td>
        <td><%= player.league_id %></td>
        <td><%= player.email_address %></td>
        <td><%= player.transaction_id %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

